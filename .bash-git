GIT_PS1_SHOWDIRTYSTATE=1
GIT_PS1_SHOWUPSTREAM="auto"
GIT_PS1_SHOWCOLORHINTS=1

# Change PS1
export PROMPT_COMMAND='__git_ps1 "\n\! \[$(tput setaf 6)\]\t \[$(tput setaf 3)\]\u \[$(tput setaf 2)\]\w\[\033[0m\]" "\n$ \[$(tput sgr0)\]"'

# Up to date
function utd {
	git fetch ;
	git branch -v | grep "\[.* [[:digit:]]\]";
}

# pom.xml version
alias pomversion="cat pom.xml | grep -E '<version>(.+?)<\/version>' -m1"
